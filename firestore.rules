
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures user profile data. Allows a user to modify their own profile,
     *              and allows any authenticated user to read any other user's profile.
     * @path /users/{userId}
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }
      
      function isOwner() {
        return isSignedIn() && request.auth.uid == userId;
      }

      allow get: if isSignedIn();
      allow list: if false; // Prevent listing of user profiles for privacy.
      allow create, update, delete: if isOwner();
    }

    /**
     * @description Secures team profile data, allowing access only to team members.
     * @path /teams/{teamId}
     */
    match /teams/{teamId} {
      function isSignedIn() {
        return request.auth != null;
      }
      
      function isTeamCreator() {
        // On create, check request.resource.data.creatorId
        let creator = resource == null ? request.resource.data.creatorId : resource.data.creatorId;
        return isSignedIn() && creator == request.auth.uid;
      }

      function isTeamMember() {
        return isSignedIn() && resource.data.teamMemberIds.hasAny([request.auth.uid]);
      }

      allow get, list: if true; // Publicly readable, but list queries should be secured in the app.
      allow create: if isTeamCreator();
      allow update: if isTeamCreator() || isTeamMember();
      allow delete: if isTeamCreator();

      /**
       * @description Secures chat messages within a team, allowing access only to team members.
       * @path /teams/{teamId}/messages/{messageId}
       */
      match /messages/{messageId} {
        function isParentTeamMember() {
          let teamDoc = get(/databases/$(database)/documents/teams/$(teamId));
          return request.auth != null && teamDoc.data.teamMemberIds.hasAny([request.auth.uid]);
        }

        allow get, list, create: if isParentTeamMember();
        allow update, delete: if false; // Messages are immutable.
      }
    }
    
    /**
     * @description Allows public read access to hackathon listings.
     * @path /hackathons/{hackathonId}
     */
    match /hackathons/{hackathonId} {
      allow get, list: if true;
      allow create, update, delete: if false;
    }

    /**
     * @description Secures join requests for teams.
     * @path /joinRequests/{requestId}
     */
    match /joinRequests/{requestId} {
       function isSignedIn() {
        return request.auth != null;
      }

      function isRequester() {
        // On create, resource is null, so check request.resource
        let userId = resource == null ? request.resource.data.userId : resource.data.userId;
        return isSignedIn() && request.auth.uid == userId;
      }

      function isTeamCreator() {
        // On create, resource is null, so check request.resource
        let teamId = resource == null ? request.resource.data.teamId : resource.data.teamId;
        let team = get(/databases/$(database)/documents/teams/$(teamId));
        return isSignedIn() && team.data.creatorId == request.auth.uid;
      }
      
      // Allow reading requests if you are the requester OR the team creator.
      // This covers both individual users checking their sent requests and team owners managing incoming requests.
      allow get: if isRequester() || isTeamCreator();
      
      // Allow creating a request if you are the one making the request.
      allow create: if isRequester() && request.resource.data.status == 'pending';

      // Only the team creator can update the status of a request (to approve/reject).
      allow update: if isTeamCreator() && request.resource.data.status in ['approved', 'rejected'];

      // No one can list all requests or delete them. Deletes are disallowed to maintain a history.
      allow list, delete: if false;
    }
  }
}
