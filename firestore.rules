
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures user profile data. Allows any authenticated user to read profiles,
     *              but only the owner can modify their own profile. This is necessary for
     *              displaying team member information.
     * @path /users/{userId}
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }
      
      function isOwner() {
        return isSignedIn() && request.auth.uid == userId;
      }

      allow get: if isSignedIn();
      allow list: if false; // Prevent listing of all user profiles for privacy.
      allow create, update, delete: if isOwner();
    }

    /**
     * @description Secures team profile data. Team data is publicly readable.
     *              Only the creator can create, update, or delete a team.
     * @path /teams/{teamId}
     */
    match /teams/{teamId} {
      function isSignedIn() {
        return request.auth != null;
      }
      
      function isTeamCreator() {
        // On create, check request.resource.data.creatorId. On update/delete, check existing resource.
        let creatorId = resource == null ? request.resource.data.creatorId : resource.data.creatorId;
        return isSignedIn() && creatorId == request.auth.uid;
      }

      allow get, list: if true; // Publicly readable. List queries should be secured in the app.
      allow create, update, delete: if isTeamCreator();

      /**
       * @description Secures chat messages within a team. Only team members can access chat.
       * @path /teams/{teamId}/messages/{messageId}
       */
      match /messages/{messageId} {
        function isTeamMember() {
          let teamDoc = get(/databases/$(database)/documents/teams/$(teamId));
          return request.auth != null && request.auth.uid in teamDoc.data.teamMemberIds;
        }

        allow read, list, create: if isTeamMember();
        allow update, delete: if false; // Messages are immutable.
      }
    }
    
    /**
     * @description Allows public read access to hackathon listings.
     * @path /hackathons/{hackathonId}
     */
    match /hackathons/{hackathonId} {
      allow get, list: if true;
      allow create, update, delete: if false; // Managed externally.
    }

    /**
     * @description Secures join requests for teams.
     * @path /joinRequests/{requestId}
     */
    match /joinRequests/{requestId} {
       function isSignedIn() {
        return request.auth != null;
      }

      // The user who is making the request.
      function isRequester() {
        let userId = resource == null ? request.resource.data.userId : resource.data.userId;
        return isSignedIn() && request.auth.uid == userId;
      }

      // The creator of the team being applied to.
      function isTeamCreator() {
        let teamId = resource == null ? request.resource.data.teamId : resource.data.teamId;
        let teamDoc = get(/databases/$(database)/documents/teams/$(teamId));
        return isSignedIn() && teamDoc.data.creatorId == request.auth.uid;
      }
      
      // Allow reading a specific request if you are the requester OR the team creator.
      allow get: if isRequester() || isTeamCreator();
      
      // Allow creating a request if you are the one making it.
      allow create: if isRequester();

      // Only the team creator can update the status of a request (to approve/reject).
      allow update: if isTeamCreator();
      
      // Secure list operations: Allow listing ONLY if querying by 'userId' (for users to see their sent requests)
      // OR by 'teamId' (for team owners to see requests for their team). This prevents broad, insecure queries.
      allow list: if isSignedIn() && (request.query.get("userId") == request.auth.uid || get(/databases/$(database)/documents/teams/$(request.query.get("teamId"))).data.creatorId == request.auth.uid);

      // Disallow deleting requests to maintain a history.
      allow delete: if false;
    }
  }
}
